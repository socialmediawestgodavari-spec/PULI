<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Beneficiary Name -->
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ’™ CREDIT DETAILS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F0FE"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CREDIT DETAILS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A73E8"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Principal Amount"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#34A853"
                    android:gravity="start" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="start" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Interest Rate"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtIRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#EA4335"
                    android:gravity="start" />
            </LinearLayout>

        </LinearLayout>

        <!-- ðŸ’š INTEREST & TOTAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E6F4EA"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <!-- Header with today's date -->
            <TextView
                android:id="@+id/txtInterestHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INTEREST TO DATE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#34A853"
                android:layout_marginBottom="12dp" />

            <!-- Accrued Interest -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Accrued Interest"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtCalculatedInterest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#EA4335"
                    android:gravity="start" />
            </LinearLayout>

            <!-- Total Amount (Principal + Interest) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Amount"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtTotalAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A73E8"
                    android:gravity="start" />
            </LinearLayout>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duration"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#5F6368"
                    android:gravity="start" />
            </LinearLayout>

        </LinearLayout>

        <!-- âšª REMARKS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F9FA"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REMARKS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#5F6368"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/txtRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#5F6368"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
