<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PULI Interest Calculator"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:layout_marginBottom="20dp" />

        <!-- ✨ INPUT SECTION - Light Blue Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F0FE"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:translationZ="4dp">

            <!-- Amount Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount (₹)"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:gravity="end"
                    android:paddingEnd="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    app:boxCornerRadius="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Rate Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rate (₹/₹100/mo)"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:gravity="end"
                    android:paddingEnd="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    app:boxCornerRadius="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Start Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Date"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:gravity="end"
                    android:paddingEnd="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDate1"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1.2"
                    android:text="Select"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#34A853" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Selected"
                android:textSize="14sp"
                android:textColor="#5F6368"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="16dp" />

            <!-- End Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End Date"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:gravity="end"
                    android:paddingEnd="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDate2"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1.2"
                    android:text="Select"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#EA4335" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Selected"
                android:textSize="14sp"
                android:textColor="#5F6368"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="12dp" />

            <!-- Calculate Button (Centered) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalculate"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:text="Calculate Interest"
                android:textColor="#FFFFFF"
                app:cornerRadius="16dp"
                app:backgroundTint="#1A73E8" />

        </LinearLayout> <!-- End Input Section -->

        <!-- ✨ RESULT SECTION - Light Green Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E6F4EA"
            android:padding="20dp"
            android:elevation="4dp"
            android:translationZ="4dp">

            <!-- Result Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESULT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#34A853"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Principal Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Principal Amount"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/txtPrincipal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹0.00"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="start" />
            </LinearLayout>

            <!-- Interest Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Interest Amount"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/txtInterest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹0.00"
                    android:textSize="16sp"
                    android:textColor="#34A853"
                    android:textStyle="bold"
                    android:gravity="start" />
            </LinearLayout>

            <!-- Total Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Amount"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹0.00"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1A73E8"
                    android:gravity="start" />
            </LinearLayout>

            <!-- Duration Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duration"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0y 0m 0d"
                    android:textSize="16sp"
                    android:textColor="#5F6368"
                    android:gravity="start" />
            </LinearLayout>

            <!-- Result Message -->
            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#34A853"
                android:gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout> <!-- End Result Section -->

    </LinearLayout>
</ScrollView>
