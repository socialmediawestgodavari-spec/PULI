<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PULI Interest Calculator"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:layout_marginBottom="24dp" />

        <!-- Principal Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Principal Amount (₹)"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Rate Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rate (₹ per ₹100 per month)"
            android:layout_marginTop="16dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Start Date Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDate1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="Select Start Date"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:backgroundTint="#34A853" />

        <TextView
            android:id="@+id/txtDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date: Not Selected"
            android:textSize="14sp"
            android:textColor="#5F6368"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- End Date Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDate2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Select End Date"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:backgroundTint="#EA4335" />

        <TextView
            android:id="@+id/txtDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date: Not Selected"
            android:textSize="14sp"
            android:textColor="#5F6368"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Calculate Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Calculate Interest"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:backgroundTint="#1A73E8" />

        <!-- Result Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESULT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Principal Amount: ₹0.00"
            android:textSize="16sp"
            android:textColor="#202124"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtInterest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interest Amount: ₹0.00"
            android:textSize="16sp"
            android:textColor="#34A853"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount (P + I): ₹0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 0 years, 0 months, 0 days"
            android:textSize="14sp"
            android:textColor="#5F6368"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#34A853"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
