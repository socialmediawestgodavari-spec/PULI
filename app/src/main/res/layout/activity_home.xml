<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="60dp"
        android:paddingBottom="40dp">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PULI"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:layout_marginBottom="48dp" />

        <!-- Credit & Debit Buttons (Side by Side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Credit Button with Icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCredit"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Credit"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:drawableStart="@android:drawable/ic_menu_card"
                android:drawableTint="#FFFFFF"
                android:drawablePadding="8dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#34A853"
                style="@style/Widget.Material3.Button" />

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <!-- Debit Button with Icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDebit"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Debit"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:drawableStart="@android:drawable/ic_menu_send"
                android:drawableTint="#FFFFFF"
                android:drawablePadding="8dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#EA4335"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

        <!-- Calculate Button with Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculate"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:text="Calculate Interest"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
            android:drawableTint="#FFFFFF"
            android:drawablePadding="10dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#1A73E8"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>
</ScrollView>
