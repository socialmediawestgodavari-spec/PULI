<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Top spacer: ~30% of screen -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <!-- Content area: ~70% of screen, center-aligned -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PULI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnCredit"
            android:layout_width="220dp"
            android:layout_height="54dp"
            android:text="Credit"
            android:textSize="17sp"
            android:backgroundTint="#34A853"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnDebit"
            android:layout_width="220dp"
            android:layout_height="54dp"
            android:text="Debit"
            android:textSize="17sp"
            android:backgroundTint="#EA4335"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="220dp"
            android:layout_height="54dp"
            android:text="Calculate Interest"
            android:textSize="17sp"
            android:backgroundTint="#1A73E8"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
