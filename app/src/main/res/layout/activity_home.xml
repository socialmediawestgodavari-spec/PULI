<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- App Title (Centered, with top margin) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PULI"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1A73E8"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:background="#FFFFFF" />

    <!-- Credit Button (Full Width, Blue Section) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCredit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Credit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1A73E8"
        app:cornerRadius="0dp"
        app:backgroundTint="#E6F4EA"
        style="?android:attr/borderlessButtonStyle" />

    <!-- Debit Button (Full Width, Green Section) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDebit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Debit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#34A853"
        app:cornerRadius="0dp"
        app:backgroundTint="#FFF8E1"
        style="?android:attr/borderlessButtonStyle" />

    <!-- Calculate Button (Full Width, Orange Section) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Calculate Interest"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        app:cornerRadius="0dp"
        app:backgroundTint="#E8F0FE"
        style="?android:attr/borderlessButtonStyle" />

</LinearLayout>
